{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePatterns": [
        "^net.neoforged:neoforge*"
      ],
      "schedule": [
        "every weekend"
      ]
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePatterns": [
        "^mezz.jei:*"
      ],
      "schedule": [
        "on Wednesday"
      ]
    }
  ]
}
