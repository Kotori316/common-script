{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":prHourlyLimitNone",
    ":automergeTesters",
    ":disableDependencyDashboard"
  ],
  "platformAutomerge": true,
  "platformCommit": true,
  "packageRules": [
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePatterns": [
        "curse.maven",
        "org.typelevel",
        "com.mojang:minecraft",
        "teamreborn",
        "RebornCore",
        "TechReborn"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePatterns": [
        "^net.fabricmc*"
      ],
      "registryUrls": [
        "https://maven.fabricmc.net"
      ],
      "automerge": false
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePatterns": [
        "^net.minecraftforge*"
      ],
      "registryUrls": [
        "https://maven.minecraftforge.net"
      ],
      "automerge": false
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePatterns": [
        "^net.minecraftforge:forge*"
      ],
      "versioning": "regex:(?<compatibility>.*-)?(?<major>\\d+)(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))",
      "automerge": false
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePatterns": [
        "^net.fabricmc.fabric-api*"
      ],
      "automerge": false,
      "versioning": "regex:^(?<major>\\d+)(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))(?<compatibility>\\+.*)?$"
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePatterns": [
        "^net.neoforged*"
      ],
      "registryUrls": [
        "https://maven.neoforged.net/releases"
      ],
      "automerge": true,
      "ignoreUnstable": false,
      "major": {
        "enabled": false
      },
      "minor": {
        "enabled": false
      }
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePatterns": [
        "^dev.architectury.loom*",
        "architectury-plugin"
      ],
      "registryUrls": [
        "https://maven.architectury.dev"
      ],
      "automerge": false
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePatterns": [
        "^com.kotori316:test-utility",
        "^com.kotori316:debug-utility",
        "^com.kotori316:VersionCheckerMod"
      ],
      "registryUrls": [
        "https://maven.kotori316.com"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchDepTypes": [
        "plugin"
      ],
      "automerge": true
    }
  ]
}
